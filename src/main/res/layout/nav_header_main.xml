                        android:id="@+id/tvTotalDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textAlignment="center"
                        android:textColor="@color/gray_dark"
                        android:textSize="25sp"
